<div class="post">
  <div>
    <h2>{{title}}</h2>
    <p>Created by {{username}} on {{format_date date_created}}</p>
  </div>
  <h3>{{description}}</h3>
</div>

<!-- Loop over each object in the projects array -->
{{#each comments as |comment| }}
<div class="comment">
  <div></div>
  <p>{{comment.description}}</p>
  <p>&#8212; {{comment.user.username}}, {{format_date comment.date_created}}</p>
</div>
{{/each}}

<div class="form">
  <h2></h2>
  <form class="comment-form" id={{id}}>
    <label >Comment</label>
    <textarea name="" id="description-comment" cols="30" rows="3"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>

<script src="/js/comment.js"></script>